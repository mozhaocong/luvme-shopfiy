{% if settings.enable_multilang and multilang contains '|' %}
<span class="lang1 hete-span-text">{{ multilang | split: '|' | first | strip }}</span>
<span class="lang2 hete-span-text">{{ multilang | split: '|' | last | strip }}</span>
{% else %}
<span class="hete-span-text">{{ multilang | split: '|' | first }}</span>
{% endif %}