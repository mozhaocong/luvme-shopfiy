<div id="section-id-{{ section.id }}" class="{% if section.settings.use_alt_bg %}use-alt-bg fully-padded-row--medium{% else %}fully-spaced-row--medium{% endif %}">
  {% style %}
    #section-id-{{ section.id }}{
      margin-top:{{ section.settings.spacing_margin_top }}px !important;
      margin-bottom:{{ section.settings.spacing_margin_bottom }}px !important;
    }
    {%- for block in section.blocks -%}
    #section-id-{{ section.id }} #block-id-{{ block.id }} .text-column__image {
      max-width: {{ block.settings.image_width }}px;
    }
    {%- endfor -%}
    #section-id-{{ section.id }} .flexible-layout{margin-left:0 !important;}
    #section-id-{{ section.id }} .pc_hide{display:flex;}
    #section-id-{{ section.id }} .yd_hide{display:none;}
    .col-six{-webkit-box-flex:0;-ms-flex:0 0 16.6666%;flex:0 0 16.6666%;max-width:16.6666%}
    .col-seven{-webkit-box-flex:0;-ms-flex:0 0 14.2857%;flex:0 0 14.2857%;max-width:14.2857%}
    .col-eight{-webkit-box-flex:0;-ms-flex:0 0 12.5%;flex:0 0 12.5%;max-width:12.5%}
    .col-nine{-webkit-box-flex:0;-ms-flex:0 0 11.1111%;flex:0 0 11.1111%;max-width:11.1111%}
    .col-ten{-webkit-box-flex:0;-ms-flex:0 0 10%;flex:0 0 10%;max-width:10%}
    .col-eleven{-webkit-box-flex:0;-ms-flex:0 0 9.0909%;flex:0 0 9.0909%;max-width:9.0909%}
    .col-twelve{-webkit-box-flex:0;-ms-flex:0 0 8.3333%;flex:0 0 8.3333%;max-width:8.3333%}
    .col-thirteen{-webkit-box-flex:0;-ms-flex:0 0 7.6923%;flex:0 0 7.6923%;max-width:7.6923%}
    .col-fourteen{-webkit-box-flex:0;-ms-flex:0 0 7.1428%;flex:0 0 7.1428%;max-width:7.1428%}
    .col-fifteen{-webkit-box-flex:0;-ms-flex:0 0 6.6666%;flex:0 0 6.6666%;max-width:6.6666%}
    .col-sixteen{-webkit-box-flex:0;-ms-flex:0 0 6.25%;flex:0 0 6.25%;max-width:6.25%}
    .hete-section-fully{margin:40px 0px;overflow: hidden !important;}
    .col-six, .col-seven, .col-eight, .col-nine, .col-ten, .col-eleven, .col-twelve, .col-thirteen, .col-fourteen, .col-fifteen, .col-sixteen{padding:0 6px;}
    @media (max-width: 750px){
      #section-id-{{ section.id }} .flexible-layout {
          flex-direction: row;
      }
      #section-id-{{ section.id }} .text-column{
        padding-right: 5px;
        padding-left: 5px;
      }
      #section-id-{{ section.id }} .pc_hide{display:none;}
      #section-id-{{ section.id }} .yd_hide{display:block;}
      .col-md-4{-webkit-box-flex:0;-ms-flex:0 0 33.333333%;flex:0 0 33.333333%;max-width:33.333333%}
      .col-lg-3{-webkit-box-flex: 0;-ms-flex: 0 0 25%;flex: 0 0 25%;max-width: 25%;}
      .col5{-webkit-box-flex: 0;-ms-flex: 0 0 20%;flex: 0 0 20%;max-width: 20%;}
      .style_2{overflow: auto;}
      .style_2 .flexible-layout--variable-columns{justify-content: normal;}
    }
  {% endstyle %}

  <div class="container">
    {% if section.settings.title != blank %}
      <h2 class="hometitle h4-style align-center" data-cc-animate>
        {{- section.settings.title | escape -}}
      </h2>
    {% endif %}
    <!-- pc -->
    <div class="pc_hide flexible-layout flexible-layout--variable-columns flexible-layout--columns-{{ section.blocks.size }} align-{{ section.settings.text_alignment }} {{ row }}">
      {% for block in section.blocks %}
        <div id="block-id-{{ block.id }}" class="text-column {{ grid_item_width }}" {{ block.shopify_attributes }}
             data-cc-animate="cc-fade-in-up" data-cc-animate-delay="{{ forloop.index | times: 0.15 }}s">
          {% if block.settings.enable_image %}
            <div class="text-column__image lightly-spaced-row">
              {%- if block.settings.link != blank -%}<a href="{{ block.settings.link }}">{%- endif -%}

              {%- if block.settings.image != blank -%}
                {%- render 'responsive-image', image: block.settings.image -%}
              {%- else -%}
                <div class="placeholder-image">
                  {{- 'image' | placeholder_svg_tag: 'placeholder-svg' -}}
                </div>
              {%- endif -%}

              {%- if block.settings.link != blank -%}</a>{% endif -%}
            </div>
          {% endif %}

          {% if block.settings.title != blank %}
            <h3 class="text-column__title">{{ block.settings.title }}</h3>
          {% endif %}

          {% if block.settings.text != blank %}
            <div class="text-column__text rte">{{ block.settings.text }}</div>
          {% endif %}

          {% if block.settings.button_label != blank %}
            <div class="text-column__button-row text-column__button-row--{{ section.settings.button_style }}">
              <a class="text-column__button {% if section.settings.button_style != 'link' %}btn btn--{{ section.settings.button_style }}{% else %}small-feature-link{% endif %}" href="{{ block.settings.link }}">{{ block.settings.button_label }}</a>
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
    <!-- 移动 -->
    <div class="yd_hide {% if section.settings.title_style == 'style_1' %}style_1{% elsif section.settings.title_style == 'style_2' %}style_2{% endif %}">
      <div class="flexible-layout flexible-layout--variable-columns flexible-layout--columns-{{ section.blocks.size }} align-{{ section.settings.text_alignment }} {{ row_mobile }} ">
        {% for block in section.blocks %}
          <div id="block-id-{{ block.id }}" class="text-column {{ grid_item_width_mobile }}" {{ block.shopify_attributes }}
               data-cc-animate="cc-fade-in-up" data-cc-animate-delay="{{ forloop.index | times: 0.15 }}s">
            {% if block.settings.enable_image %}
              <div class="text-column__image lightly-spaced-row">
                {%- if block.settings.link != blank -%}<a href="{{ block.settings.link }}">{%- endif -%}
  
                {%- if block.settings.image != blank -%}
                  {%- render 'responsive-image', image: block.settings.image -%}
                {%- else -%}
                  <div class="placeholder-image">
                    {{- 'image' | placeholder_svg_tag: 'placeholder-svg' -}}
                  </div>
                {%- endif -%}
  
                {%- if block.settings.link != blank -%}</a>{% endif -%}
              </div>
            {% endif %}
  
            {% if block.settings.title != blank %}
              <h3 class="text-column__title">{{ block.settings.title }}</h3>
            {% endif %}
  
            {% if block.settings.text != blank %}
              <div class="text-column__text rte">{{ block.settings.text }}</div>
            {% endif %}
  
            {% if block.settings.button_label != blank %}
              <div class="text-column__button-row text-column__button-row--{{ section.settings.button_style }}">
                <a class="text-column__button {% if section.settings.button_style != 'link' %}btn btn--{{ section.settings.button_style }}{% else %}small-feature-link{% endif %}" href="{{ block.settings.link }}">{{ block.settings.button_label }}</a>
              </div>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>
<script type="text/javascript" src="https://cdn.shopify.com/s/files/1/2465/8681/files/jquery.min.js?v=1613585053"></script>
<script>
  var number = $('#section-id-{{ section.id }} .style_2 .flexible-layout .text-column').length
  var widths = $('#section-id-{{ section.id }} .style_2 .flexible-layout .text-column').width()
  var px = Number(widths)*number
  if({{section.settings.collection_results_per_row_mobile}} == number){}else{
    $('#section-id-{{ section.id }} .style_2 .flexible-layout .text-column').css({"width":widths,"max-width":widths})
    $('#section-id-{{ section.id }} .style_2 .flexible-layout').css('width',px)
  }
</script>
